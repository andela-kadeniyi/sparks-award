.modal-overlay {
  background: rgba(0,0,0,0.72);
  bottom: 0;
  left: 0 ;
  position: fixed;
  right: 0;
  top: 0;
  transition: opacity 400ms ease-in;
  z-index: 2000;
  height: 100%;
}

.modal-box {
  bottom: 0;
  left: 0;
  overflow-x: hidden;
  overflow-y: auto;
  position: fixed;
  right: 0;
  top: 0;
  height: 100%;
  z-index: 2100;
}

.modal-content {
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
  border-radius: 5px;
  margin: 30px auto;
  position: relative;
  height: 100%;
  box-shadow: 3px 5px 4px rgba(0, 0, 0, 0.5);
  max-width: 700px;
  padding: 15px 20px 13px 20px;

  .overlay {
    background-color: rgba(0,0,76, 0.6)
  }
}

.modal-close {
  cursor: pointer;
  height: 15px;
  position: absolute;
  right: 10px;
  top: -13px;
  width: 15px;
  z-index: 2200;
}

.cat-modal {
  position: absolute;
  display: flex;
  height: 100%;
  width: 100%;
  color: #d1d1d1;
  flex-direction: column;
  align-items: center;
}
