.footer {
  display:flex;
  justify-content: center;
  align-items: center;
  height: 70px;
  background-color: rgb(51,89,223);
  color: #fff;
  padding: 5px 15px;

  .fa-heart {
    color: #a12312;
    margin: 0 10px;
  }

  .rotate { padding: 0 7px; }

  .title {
    display: inline-flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: center;
    font-size: 2em;
    font-weight: 700;
    color: #ffd300;
    padding: 0 10px;
  }

  .made-by {
    display: inline-flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: center;
    margin-left: 20px;
  }
}
