@import '../../node_modules/react-selectize/themes/default.css'

.main {

  .main-holder {
    padding: 0 50px;
    display: flex;
    justify-content: center;

    .loader {
      margin: 10vh 0;
    }
  }

  .success { text-align: center; }
  
  .holder {
    display: flex;
    flex-flow: column wrap;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }

  .container {
    display: flex;
    flex-flow: row wrap;
    justify-content: space-around;
    width: 100%;

    .category {
      position: relative;
      height: 300px;
      background-repeat: no-repeat;
      background-position: center;
      width: 27%;
      background-color: white;
      border: 1px solid #eeeeee;
      border-radius: 2px;
      box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.19);
      margin-bottom: 25px;
      margin-right: 2%;
      padding: 10px 25px;

      +below(992px) {
        width: 40%;
        padding: 10px 15px;
      }

      +below(600px) {
          width: 90%;
      }

      .details {
        position: absolute;
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        align-items: center;
        top: 0;
        left: 0;
        color: #fff;
        text-align: center;
        width: 100%;
        height: 100%;

        &:hover {
          background-color: rgba(0, 0, 12, 0.2);
        }

        p { padding: 0 10px; }

        .react-selectize.root-node {
          width: 80%;
        }
      }
    }
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    background-color: rgba(0, 0, 76, 0.5);
  }


  button {
    margin: 20px;
    font-size: 15px;
    padding: 15px 80px;
    color: #3359df;
    background-color: #fff;
    border: 1px solid #3359df;
    width: 200px;

    &:hover {
      background-color: #3359df;
      color: #fff;
      cursor: pointer;
    }
  }

  .back {
    color: blue;

    &:hover {
      cursor: pointer;
      text-decoration: underline;
    }
  }

  .error-msg { color: #a12312; }
}
