@import '../../node_modules/react-selectize/themes/default.css'

.container {
  display: flex;
  flex-flow: row wrap;
  justify-content: center;

  .category {
    position: relative;
    width: 19.8%;
    height: 300px;
    margin: 0.1%;
    background-repeat: no-repeat;
    background-position: center;
    vertical-align: middle;

    .details {
      position: absolute;
      display: flex;
      flex-direction: column;
      justify-content: space-around;
      align-items: center;
      top: 0;
      left: 0;
      color: #fff;
      text-align: center;
      width: 100%;
      height: 100%;

      p { padding: 0 10px; }

      .react-selectize.root-node {
        width: 80%;
      }
    }
  }

  button {
    margin: 20px;
    font-size: 15px;
    padding: 15px 80px;
    color: #fff;
    background-color: #3359df;
    border: none;
  }

  .modal-content {
    height: 70%;
  }
}

.overlay {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 76, 0.5);
}
