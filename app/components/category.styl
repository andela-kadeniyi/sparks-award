.container {
  display: flex;
  flex-flow: row wrap;

  .category {
    position: relative;
    width: 19.8%;
    height: 300px;
    margin: 0.1%;
    background-repeat: no-repeat;
    background-position: center;
    vertical-align: middle;

    .details {
      position: absolute;
      display: flex;
      flex-direction: column;
      align-items: center;
      top: 0;
      left: 0;
      color: #fff;
      text-align: center;
      width: 100%;
      margin-top: 20%;
    }
  }

  .modal-content {
    height: 70%;
  }
}

.overlay {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background-color: rgba(0,0,76, 0.5)
}
