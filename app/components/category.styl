@import '../../node_modules/react-selectize/themes/default.css'

.main {

  &, .holder {
    display: flex;
    flex-flow: column wrap;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }

  .container {
    display: flex;
    flex-flow: row wrap;
    justify-content: center;
    width: 100%;

    .category {
      position: relative;
      width: 22%;
      height: 300px;
      margin: 30px;
      background-repeat: no-repeat;
      background-position: center;
      vertical-align: middle;

      .details {
        position: absolute;
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        align-items: center;
        top: 0;
        left: 0;
        color: #fff;
        text-align: center;
        width: 100%;
        height: 100%;

        &:hover {
          background-color: rgba(0, 0, 12, 0.2);
        }

        p { padding: 0 10px; }

        .react-selectize.root-node {
          width: 80%;
        }
      }
    }
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    background-color: rgba(0, 0, 76, 0.5);
  }


  button {
    margin: 20px;
    font-size: 15px;
    padding: 15px 80px;
    color: #3359df;
    background-color: #fff;
    border: 1px solid #3359df;
    width: 200px;

    &:hover {
      background-color: #3359df;
      color: #fff;
      cursor: pointer;
    }
  }

  .back {
    color: blue;

    &:hover {
      cursor: pointer;
      text-decoration: underline;
    }
  }

  .error-msg { color: #a12312; }
}
