@require './app.styl'

.nav-bar{
  display:flex;
  justify-content: space-between;
  width: 100%;
  height: 70px;
  background-color: rgb(51,89,223);
  color: #fff;
  padding: 0 15px;

  .logo {
    display: flex;

    .logo-text{
      padding-left: 26.5px;
      padding-top: 18px;
      font-size: 27px;
      display: inline;
    }

    .logo-img {
      position: absolute;
      padding: 10px;
      height: 50px;
    }

    .page-title {
      padding-top: 10px;
      padding-left: 25px;
      font-size: 40px;
      display: inline;
    }
  }

  .status {
    padding-top: 25px;
    padding-right: 20px;
    font-size: 15px;
  }

  a {
    text-decoration: none;
    color: #fff;
  }

}
