@require './app.styl'

.nav-bar{
  display:flex
  justify-content: space-between
  width: 100%
  height: 70px
  background-color: rgb(51,89,223)
  color: #fff
  padding: 0 15px 0 15px

  .logo{
    display: flex

    .logo-text{
      padding-left: 26.5px;
      padding-top: 18px;
      font-size: 27px;
      display: inline
      font-family: Roboto,"Helvetica Neue",sans-serif;
    }

    .logo-img {
      position: absolute;
      padding: 10px
      height: 50px;
    }

    .page-title{
      padding-top: 10px
      padding-left: 25px
      font-size: 40px
      display: inline
      font-family: Roboto,"Helvetica Neue",sans-serif;
    }
  }

  .status{
    padding-top: 25px
    padding-right: 20px
    font-family:Roboto,"Helvetica Neue",sans-serif
    font-size: 15px
  }

}
