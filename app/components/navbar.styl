@require './app.styl'

.nav-bar{
  display:flex;
  justify-content: space-between;
  height: 70px;
  background-color: rgb(51,89,223);
  color: #fff;
  padding: 0 15px;
  margin-bottom: 30px;
  font-size: 17px;

  .right-column {
    display: flex;
    flex-flow: row nowrap;
    align-items: center;

    .user-details {
      display: flex;
      flex-flow: row nowrap;
      align-items: center;
      padding: 0 20px;
    }
  }

  .nav-link-container {
    display: flex;
    align-items: center;
    margin-left: 50px;

    .nav-link {
      color: #fff;
      padding: 0 20px;
      text-decoration: none;

      &.active { color: #ffa500; }
    }
  }

  .user-avatar {
    height: 50px;
    width: 50px;
    border-radius: 100px;
    border: 3px solid #919191;
    margin-right: 7px;
  }

  .logo {
    display: flex;

    .logo-text{
      padding-left: 26.5px;
      padding-top: 18px;
      font-size: 27px;
      display: inline;
    }

    .logo-img {
      position: absolute;
      padding: 10px;
      height: 50px;
    }

    .page-title {
      padding-top: 10px;
      padding-left: 25px;
      font-size: 40px;
      display: inline;
    }
  }

  .status {
    color: #fff;

    &:hover {
      text-decoration: underline;
      cursor: pointer;
    }
  }
}
